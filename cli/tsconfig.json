{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"outDir": "dist",
		"sourceMap": false,
		"esModuleInterop": true,
		"declaration": true,
		"jsx": "react",
		"strict": false,
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["source"],
	"exclude": ["node_modules", "dist"]
}
